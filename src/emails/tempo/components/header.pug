table(width=max_w align="center" class="mobile-table")&attributes(tableAtt)
  +vSpacer(20)
  tr
    td
      table(width=max_w align="center" class="mobile-table")&attributes(tableAtt)
        tr
          td(style="display:none" class="mobile-show") &nbsp;
          td(align="left" valign="top" bgcolor="#FFFFFF" style=`font-size:14px;  color: ${ dark_gray }`) Can't see this Email? View it in your
            a(style=`color: ${yellow};`) &nbsp; Browser
  +vSpacer(15)
  tr
    td(align="left" valign="top" bgcolor=yellow)
      table(width=max_w align="center" class="mobile-table")&attributes(tableAtt)
        tr
          td(align="center" valign="center" width="140" height="50" bgcolor=dark_gray)
            img(src=img_path+"icon-tempo.png" width="81" height="34")
          td(width="40" style="display:none" class="mobile-show") &nbsp;
          td(width="240" class="mobile-hide") &nbsp;
          each val in menu_options
            td(align="center" valign="center" height="50")
              a(href=val.url style=`color: ${dark_gray}; font-size:13px; text-decoration:none`) #{ val.link }
          td &nbsp;
  +vSpacer(17)

